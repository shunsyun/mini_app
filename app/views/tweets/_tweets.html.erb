<div class="row">
  <div class="col s12 m6">
      <div class="card blue lighten-5">
        <div class="card-content black-text">
          <%= simple_format(tweet.text) %>
          <span class="name">投稿者</span><%= tweet.name %>
        </div>
        <div class="card-action">
        <% if user_signed_in? && current_user.id == tweet.user_id %>
          <a style="display:inline-block"><%= button_to '編集', "/tweets/#{tweet.id}/edit",method: :get %></a>
          <a style="display:inline-block"><%= button_to "削除", "/tweets/#{tweet.id}", method: :delete %></a>
        <% end %>
        </div>
      </div>
  </div>
</div>